PORT=3000
BASE_URL=http://localhost:3000
OUTPUT_DIR=generated

# Downstream auth (client -> this service)
REQUIRE_API_KEY=true
API_KEY=CHANGE_ME_TO_A_STRONG_KEY

# Upstream Gemini
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=gemini-2.0-flash-exp-image-generation

# Optional custom full endpoint (highest priority)
# Supported placeholders: {model} {api_key}
# Example:
# GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models/{model}:generateContent?key={api_key}
GEMINI_ENDPOINT=

# Global style reference
ENABLE_STYLE_REFERENCE=false

# One variable only:
# - URL mode:  https://example.com/style-reference.png
# - Local mode: assets/style-reference.png
STYLE_REFERENCE_SOURCE=

# Cache/refresh for URL mode
STYLE_REFERENCE_CACHE_DIR=style-reference-cache
STYLE_REFERENCE_REFRESH=false
STYLE_REFERENCE_TIMEOUT_MS=15000

# Optional override; if empty, server infers mime type
STYLE_REFERENCE_MIME_TYPE=

# Prompt tail notice
APPEND_STYLE_NOTICE=true
STYLE_NOTICE=The reference image is STYLE-ONLY and NOT a person/identity reference. Use it only for palette, lighting, brushwork, composition, and mood. Do not copy face, identity, body, age, gender, or character-specific traits.

# Logging
LOG_LEVEL=info
LOG_REQUEST_BODY=false
